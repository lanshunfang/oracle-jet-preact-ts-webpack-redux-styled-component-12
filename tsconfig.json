{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "amd",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@oracle/oraclejet/dist/types",
      "./node_modules/@types"
    ],
    "paths": {
      "ojs/*": [
        // "./node_modules/@oracle/oraclejet/dist/js/libs/oj/debug/*",

        "./node_modules/@oracle/oraclejet/dist/types/*",
        // node_modules/@oracle/oraclejet/dist/types
      ],

      "react": [
        "./node_modules/preact/compat/"
      ],
      "react-dom": [
        "./node_modules/preact/compat/"
      ],
      // "react": [
      //   "./node_modules/preact/compat/src/index.d.ts"
      // ],
      // "react-dom": [
      //   "./node_modules/preact/compat/src/index.d.ts"
      // ],
  
        "Counter/*": [
          "src/components/counter/*"
        ]
      
    },
    "declaration": true,
    // "noEmitOnError": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./web",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ]
}